{
  "type": "Categorization",
  "elements": [
    {
      "type": "Category",
      "label": "General Info",
      "elements": [
        {
          "type": "Group",
          "label": "Identification",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "label": "Device Name",
                  "scope": "#/properties/global_info/properties/name"
                },
                {
                  "type": "Control",
                  "label": "Device ID",
                  "scope": "#/properties/global_info/properties/HW_UID",
                  "options": {
                    "readonly": true
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Group",
          "label": "Sleep",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "label": "Sleep Timeout",
                  "scope": "#/properties/global_info/properties/sleep/properties/timeout",
                  "options": {
                    "slider": true
                  }
                },
                {
                  "type": "Control",
                  "label": "Sleep Threshold",
                  "scope": "#/properties/global_info/properties/sleep/properties/threshold"
                }
              ]
            }
          ]
        },
        {
          "type": "Control",
          "label": "Orientation",
          "scope": "#/properties/global_info/properties/orientation"
        }
      ]
    },
    {
      "type": "Category",
      "label": "Actions",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/global_info/properties/action_list"
        }
      ]
    },
    {
      "type": "Category",
      "label": "Connections",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/connections"
        }
      ]
    }
  ]
}